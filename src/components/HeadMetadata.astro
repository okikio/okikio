---
import { SEO } from "astro-seo";
import "@/styles/global.css";

import { Font } from "astro:assets";

const {
  title = "Okiki Ojo — Web Developer & Designer (okikio)",
  description = "A Web Developer and Designer based in Ontario, Canada, with an eye for great design (UI) and even better user experience (UX).",
  keywords = "Okiki Ojo, web dev, UX/UI, consistent, design, software engineer, student".split(
    ","
  ),
  img = {
    url: `/favicon/banner-image.png`,
    alt: "The banner image for Okiki Ojo's portfolio website, it has a yellow background and with a black 'K' in the center, representing his logo.",
    width: 1200,
    height: 630,
  },
} = Astro.props;

export type Props = {
  title?: string;
  description?: string;
  keywords?: string;
  img?: {
    url?: string;
    alt?: string;
    width?: number;
    height?: number;
  };
};

const imageDetails = {
  url: Astro.url.origin + img.url,
  secureUrl: Astro.url.origin + img.url,
  alt: img.alt,
  width: img.width,
  height: img.height,
};

const extendMeta = {
  // extending the default meta tags
  meta: [
    {
      name: "twitter:image",
      content: imageDetails.url,
    },
    { name: "twitter:title", content: title },
    { name: "twitter:description", content: description },
  ],
};

---

<Font cssVariable="--google-lexend-deca-black" preload />
<Font cssVariable="--google-manrope" preload />
<Font cssVariable="--google-lexend-deca" preload />

<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/favicon/favicon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.json" />

<link href="https://github.com/okikio" rel="me" />
<link rel="webmention" href="https://webmention.io/okikio.dev/webmention" />
<link rel="pingback" href="https://webmention.io/okikio.dev/xmlrpc" />
<link
  rel="pingback"
  href="https://webmention.io/webmention?forward=https://okikio.dev/endpoint"
/>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Accept-CH" content="DPR, Viewport-Width, Width" />
<meta name="viewport" content="width=device-width" />
<meta name="color-scheme" content="dark" />
<meta name="robots" content="index, follow, noimageindex" />
<meta name="theme-color" content="#ffff00" />

<SEO
  title={/Okiki/i.test(title) ? title : title + " — Okiki Ojo"}
  {description}
  openGraph={{
    image: { ...imageDetails },
    basic: {
      title,
      type: "website",
      image: imageDetails.url,
    },
    article: {
      authors: ["Okiki Ojo"],
      tags: Array.from(keywords, (x) => x.trim()),
    },
    optional: {
      description,
      siteName: "Okiki Ojo",
      locale: "en_US",
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: "@okikio_dev",
    creator: "@okikio_dev",
  }}
  extend={extendMeta}
/>

