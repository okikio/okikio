<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/favicon/favicon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.json" />
  
<link href="https://github.com/okikio" rel="me">
<link rel="webmention" href="https://webmention.io/okikio.dev/webmention" />
<link rel="pingback" href="https://webmention.io/okikio.dev/xmlrpc" />
<link rel="pingback" href="https://webmention.io/webmention?forward=https://okikio.dev/endpoint" />

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Accept-CH" content="DPR, Viewport-Width, Width" />
<meta name="viewport" content="width=device-width" />
<meta name="color-scheme" content="dark" />
<meta name="robots" content="index, follow, noimageindex">
<meta name="theme-color" content="#ffff00"/>

<link rel="preload" href={ManropeFontURL} as="font" type="font/woff2" crossorigin>
<link rel="preload" href={LexendDecaFontURL} as="font" type="font/woff2" crossorigin>
<SEO
  title={/Okiki/i.test(title) ? title : title + " — Okiki Ojo"}
  {description}
  openGraph={{
    image: { ...imageDetails },
    basic: {
      title,
      type: "website",
      image: imageDetails.url,
    },
    article: {
      author: "Okiki Ojo",
      tags: Array.from(keywords, (x) => x.trim()),
    },
    optional: {
      description,
      siteName: "Okiki Ojo",
      locale: "en_US",
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: "@okikio_dev",
    creator: "@okikio_dev",
  }}
  extend={extendMeta}
/>

