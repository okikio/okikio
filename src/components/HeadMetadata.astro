---
import { SEO } from "astro-seo";
import "@/styles/global.scss";

import ManropeFontURL from "@fontsource-variable/manrope/files/manrope-latin-wght-normal.woff2?url";
import LexendDecaFontURL from "@fontsource-variable/lexend-deca/files/lexend-deca-latin-wght-normal.woff2?url";

const {
  title = "Okiki Ojo — Web Developer & Designer (okikio)",
  description = "A Web Developer and Designer based in Ontario, Canada, with an eye for great design (UI) and even better user experience (UX).",
  keywords = "Okiki Ojo, web dev, UX/UI, consistent, design, software engineer, student".split(
    ","
  ),
  img = {
    url: `/favicon/banner-image.png`,
    alt: "The banner image for Okiki Ojo's portfolio website, it has a yellow background and with a black 'K' in the center, representing his logo.",
    width: 1200,
    height: 630,
  },
} = Astro.props;

export type Props = {
  title?: string,
  description?: string,
  keywords?: string,
  img?: {
    url?: string,
    alt?: string,
    width?: number,
    height?: number,
  },
}

const imageDetails = {
  url: Astro.url.origin + img.url,
  secureUrl: Astro.url.origin + img.url,
  alt: img.alt,
  width: img.width,
  height: img.height,
};

const extendMeta = {
  // extending the default meta tags
  meta: [
    {
      name: "twitter:image",
      content: imageDetails.url,
    },
    { name: "twitter:title", content: title },
    { name: "twitter:description", content: description },
  ],
};

